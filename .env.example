# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Athena Configuration
ATHENA_DATABASE=auditoria
ATHENA_OUTPUT_LOCATION=s3://seu-bucket/athena-results/
ATHENA_WORKGROUP=primary

# S3 Configuration
S3_BUCKET_DATA=seu-bucket
S3_PREFIX_BRONZE=data/bronze/
S3_PREFIX_SILVER=data/silver/
S3_PREFIX_GOLD=data/gold/

# Airflow Configuration
AIRFLOW_HOME=/home/sagemaker-user/airflow
AIRFLOW__CORE__DAGS_FOLDER=/home/sagemaker-user/pipeline-ouvidoria/airflow/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=/home/sagemaker-user/pipeline-ouvidoria/logs/pipeline.log

# Notifications (opcional)
EMAIL_ON_FAILURE=seu.email@exemplo.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
